{
	"compilerOptions": {
		"outDir": "./dist/",
		"noImplicitAny": true,
		"sourceMap": true,
		"strict": true,
		"strictNullChecks": true,
		"strictPropertyInitialization": true,
		"allowSyntheticDefaultImports": true,
		"module": "es2020",
		"target": "es6",
		"allowJs": true,
		"moduleResolution": "Node",
		"baseUrl": "./src",
		"paths": {}
	},
	"include": ["src/**/*"]
}